{% extends 'base.html.twig' %}

{% block title %}ClassTeachers Login - MyExamSpace.Com{% endblock %}

{% block stylesheets %}
     <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    </style>
{% endblock %}

{% block auth %}

<div class="loginform">
    <h1  id="who">Class Teacher  Login</h1>

     <form action="{{ path('classteacher_access') }}" method="POST">
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('access') }}">
        <div class="form-group">
            <label for="username">Full name</label>
            <span class="glyphicon glyphicon-user gly"></span>
            <input type="text" id="username" name="_username" class="form-control signup">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <span class="glyphicon glyphicon-lock gly"></span>
            <input type="password" id="password" name="_password" class="form-control signup">
        </div>
        <input type="submit" value="Login" class="btn btn-primary space">
    </form>
</div>
{% endblock %}

{% block pp %}
    <div class="imgcontainer">
        <img src="{{ asset('images/cteacher.jfif') }}" alt="class teacherImage" class="img">
    </div>
{% endblock %}