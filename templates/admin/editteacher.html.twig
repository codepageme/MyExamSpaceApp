{% extends 'tdashbase.html.twig' %}

{% block title %}Editteacher - MyExamSpace.Com{% endblock %}
{% block stylesheets %}
     <link rel="stylesheet" href="{{ asset('Css/dashboard.css') }}">
{% endblock %}

{% block map_content %}

   <div class = "here" ></div>
 
    <ul>
        <li class="boton"><a href="{{ path('admin_dashboard') }}">
        <span class="glyphicon glyphicon-th-list glyph"></span> <br>Dashboard</a></li>

        <li class="boton"><a href="#">
        <span class="glyphicon glyphicon-blackboard glypha"></span><br>Exam</a></li>

        <li class="boton"><a href="{{ path('admin_student_list') }}">
        <span class="glyphicon glyphicon-stats glypha"></span><br>Student</a></li>

        <li class="boton activa"><a href="{{ path('admin_teacher_list') }}">
        <span class="glyphicon glyphicon-folder-open glyph"></span><br>Teacher</a></li>

        <li class="boton"><a href="{{ path('admin_list') }}"> 
        <span class="glyphicon glyphicon-user glypha"></span><br>Admin</a></li>
    </ul>


    <a href="{{ path('admin_logout') }}" id="logout" 
   onclick="event.preventDefault(); document.getElementById('logout-form').submit();">
    <span class="glyphicon glyphicon-log-out glypha"></span>    Logout</a>

<form id="logout-form" action="{{ path('admin_logout') }}" method="POST" style="display: none;">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
</form>




{% endblock %}

{% block content %}


<div class="text-left" style="margin-left:20px; margin-top:20px;">
  <a href="{{ path('admin_create_teacher') }}" class="btn btn-default">Create Teacher</a>
  <a href="{{ path('admin_assign_teacher') }}" class="btn btn-default ml-2">Assign Teacher</a>
   <a href="{{ path('admin_teacher_list') }}" class="btn btn-default ml-2"> View Teacher</a>
</div>

<h3 class="text-center" style = "color:grey; margin-bottom:50px;font-family:inter">- EDIT THIS TEACHER -</h3>

      <div class="container" style="max-width:800px;">

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <!-- Prefix, Firstname, and Lastname in one row -->
        <div class="form-group">
            <div class="col-sm-4">
                {{ form_label(form.prefix, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.prefix, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prefix) }}
            </div>
            <div class="col-sm-4">
                {{ form_label(form.firstname, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.firstname) }}
            </div>
            <div class="col-sm-4">
                {{ form_label(form.lastname, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.lastname) }}
            </div>
        </div>

        <!-- Username and Password in one row -->
        <div class="form-group">
            <div class="col-sm-6">
                {{ form_label(form.username, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.username) }}
            </div>
            <div class="col-sm-6">
                {{ form_label(form.password, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.password) }}
            </div>
        </div>

        <!-- Email and Number in one row -->
        <div class="form-group">
            <div class="col-sm-6">
                {{ form_label(form.email, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="col-sm-6">
                {{ form_label(form.number, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.number, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.number) }}
            </div>
        </div>

        <!-- Submit button -->
        <div class="form-group">
            <div class="col-sm-12 text-center">
                <button type="submit" class="btn btn-primary">Update Teacher</button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}
